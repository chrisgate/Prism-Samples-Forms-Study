<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MCS.PFS.Views.MainPage"
             Title="{Binding Title}">

    <ContentPage.ToolbarItems>
        <ToolbarItem Text="Setting" />
    </ContentPage.ToolbarItems>
    
    <StackLayout HorizontalOptions="CenterAndExpand" VerticalOptions="CenterAndExpand">
        <Label Text="Welcome to Xamarin Forms and Prism!" />
        <Button Text="UsingCompositeCommands" Command="{Binding NavigateCommand}" />
        <Button Text="UsingDependencyService" Command="{Binding NavigateToUsingDependencyServicePageCommand}" />
        <Button Text="UsingPageDialogService" Command="{Binding UsingPageDialogServicePageCommand}" />
        <Button Text="UsingModules" Command="{Binding NavigateToSampleModulePageCommand}" />
        <Button Text="Using Advanced Navigation" Command="{Binding NavigateToUpcomingShowsPageCommand}" />
    </StackLayout>

</ContentPage>